---
import Listing from '../components/Listing.astro';

const url = Astro.request.url;
const searchParams = new URL(url).searchParams;
const page = parseInt(searchParams.get('page')) || 1;

const response = await fetch(`https://super-edital-api-git-main-guilhermes-projects-31b64a2d.vercel.app/concursos?page=${page}`);
const { contests, pagination } = await response.json();
---

<Listing
  contests={contests}
  pagination={pagination}
  title="Super Edital - Editais de Concursos Públicos no Brasil"
  description="Super Edital: encontre os principais editais de concursos públicos e prepare-se para alcançar sua aprovação!"
/>

<style>
  a {
    color: #001e2b;
  }
  a:hover {
    color: #3db106;
  }
</style>

