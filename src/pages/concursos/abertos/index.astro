---
import Listing from '../../../components/Listing.astro';

const url = Astro.request.url;
const searchParams = new URL(url).searchParams;
const page = parseInt(searchParams.get('page')) || 1;

const fetchContests = async () => {
  const response = await fetch(`http://localhost:3000/concursos/abertos?page=${page}`);
  if (!response.ok) {
    throw new Error('Failed to fetch contests');
  }
  const data = await response.json();
  return data;
};

const { contests, pagination } = await fetchContests();
---

<Listing
  contests={contests}
  pagination={pagination}
  title="Editais de Concursos Públicos Abertos | Super Edital"
  description="Confira os concursos públicos abertos no momento em todo o Brasil. Acesse informações detalhadas sobre vagas, salários, inscrições e editais atualizados!"
/>